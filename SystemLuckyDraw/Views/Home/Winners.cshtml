@model IEnumerable<SystemLuckyDraw.Models.Price>
@{
    ViewBag.Title = "Winners";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Winners</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WinningNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfPrize)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WinningNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfPrize)
                </td>
            </tr>
        }
    }
    else
    {
        <h3> No Result Yet</h3>
    }

</table>
<hr />
<p>

    @Html.ActionLink("Back to AddNumber", "AddNumber")
</p>