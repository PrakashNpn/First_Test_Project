@model SystemLuckyDraw.Models.Price
@{
    ViewBag.Title = "DrawPrize";
}

<h2>Draw Prize</h2>
<br />

@using (Html.BeginForm())
{


<div class="form-horizontal">

    <div class="form-group" style="display:none;">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WinningNo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("Number", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("Number", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Generate", "Generate Randomly", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownList("Random", new List<SelectListItem> {
                                                      new SelectListItem {Text="Yes",Value="1"},
                                                      new SelectListItem {Text="No", Value="0"}

                                                    }, "---Please Select---", htmlAttributes: new { style = "width : 300px; height:30px;" })
                @Html.ValidationMessage("Random", "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("PrizeType", "Prize Type ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownListFor(model => model.TypeOfPrize, new List<SelectListItem> {
                                                    new SelectListItem {Text="First_prize",Value="First_prize" },
                                                    new SelectListItem {Text="Second_prize_1st_winner", Value="Second_prize_1st_winner"},
                                                    new SelectListItem {Text="Second_prize_2nd_winner",Value = "Second_prize_2nd_winner"},
                                                    new SelectListItem {Text="Third_prize_1st_winner", Value ="Third_prize_1st_winner"},
                                                    new SelectListItem {Text="Third_prize_2nd_winner",Value ="Third_prize_2nd_winner"},
                                                    new SelectListItem {Text="Third_prize_3rd_winner",Value="Third_prize_3rd_winner"}

                                                }, "---Please Select---", htmlAttributes: new { style = "width : 300px; height:30px;" })
            @Html.ValidationMessageFor(model => model.TypeOfPrize, "", new { @class = "text-danger" })
        </div>
    </div>
    <h5>@Html.ValidationMessage("message", "", new { @class = "text-danger" })</h5>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Choose Winner" class="btn btn-default" />
        </div>
    </div>
</div>
}








